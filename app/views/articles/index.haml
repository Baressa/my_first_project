%table
	= @articles.each do |article|
		%tr
			%td
				= article.title
			%td
				= article.text
			%td
				= article.created_at.strftime("%d.%m.%Y")
			%td
				= image_tag article.image.url
			%td
				= image_tag article.image_thumb.url
			%td
				= link_to 'Show', article_path(article)
